mixin itemProd(a, i, t, vz, height, width)
	+b.itemProd
		if a
			+e.availability В наличии
		else
			+e.availability--empty В наличии
		+e.imgWrap
			img.lazy(src="#" data-src=`img/@2x/flowerpot-${i}.png`, alt="#")
		.h4= t
			if vz
				span= vz
			else
				span вазон бетонный
		table
			tr
				td Высота: 
				if height
					td= height
				else
					td 300 мм.
			tr
				td Длина: 
				if width
					td= width
				else
					td 400 мм.
			tr
				td Вес: 
				if weight
					td= weight
				else
					td 45 кг.
		+e.materials
			+e.materialsWrap
				img.lazy.res-i(src="#" data-src="img/@2x/material-1.png", alt="#")
			+e.materialsWrap
				img.lazy.res-i(src="#" data-src="img/@2x/material-2.png", alt="#")
			+e.materialsWrap
				img.lazy.res-i(src="#" data-src="img/@2x/material-3.png", alt="#")
			+e.materialsWrap
				img.lazy.res-i(src="#" data-src="img/@2x/material-4.png", alt="#")
		.h5.text-center 1800 руб.*
		+e.A.btn.btn(href="#") Заказать



